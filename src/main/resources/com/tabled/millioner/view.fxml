               <font>
                  <Font size="18.0" />
               </font></Button>
            <Button fx:id="b" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onBButtonClick" prefHeight="50.0" prefWidth="500.0" text="B">
